<resources>

    <style name="FilePickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/filepicker_colorPrimary</item>
        <item name="colorPrimaryDark">@color/filepicker_colorPrimaryDark</item>
        <item name="colorAccent">@color/filepicker_colorAccent</item>

        <!-- 控制ToolBar右侧Menu弹出的位置 -->
        <item name="actionOverflowMenuStyle">@style/filepicker_OverflowMenuStyle</item>

        <!-- 单独配置ToolBar右侧Menu按钮即三个小圆点的颜色 -->
        <!--<item name="colorControlNormal">#FFFFFF</item>-->

        <!-- 配置所有字体颜色 -->
        <item name="android:textColorPrimary">#FFFFFF</item>

        <!-- RecyclerView分割线 -->
        <item name="android:listDivider">@drawable/filepicker_divider_rv</item>
    </style>

    <!-- ToolBar菜单弹出样式 -->
    <style name="filepicker_OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">#000000</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">4dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>

    <!-- ToolBar菜单样式 -->
    <style name="filepicker_ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- 非溢出菜单字体颜色，想要修改溢出菜单内的字体颜色只能直接设置textColorPrimary但此选项会影响Title的颜色-->
        <!--<item name="actionMenuTextColor">#FFFFFF</item>-->
        <item name="android:textSize">16sp</item> <!-- 字体大小 -->
    </style>

    <style name="filepicker_MyToolbar" parent="android:Widget">
        <item name="titleTextAppearance">@style/filepicker_ToolBarTitle</item>
        <!--<item name="subtitleTextAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle</item>-->
        <item name="android:minHeight">48dp</item>
        <item name="titleMargins">4dp</item>
        <item name="maxButtonHeight">56dp</item>
        <item name="collapseIcon">?attr/homeAsUpIndicator</item>
        <!--<item name="collapseContentDescription">@string/abc_toolbar_collapse_description</item>-->
        <item name="contentInsetStart">16dp</item>
        <!--<item name="android:paddingLeft">@dimen/abc_action_bar_default_padding_start_material</item>-->
        <!--<item name="android:paddingRight">@dimen/abc_action_bar_default_padding_end_material</item>-->
    </style>
    <style name="filepicker_ToolBarTitle" parent="android:Widget">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/filepicker_white</item>
    </style>

</resources>
